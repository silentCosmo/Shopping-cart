<section id="undernav">
    <dvi class="container">
        <div class="row justify-content-center" style="margin-top: -6rem;">

            <div class="col-md-4 login-box p-4">
                <div style="margin-bottom: -1rem;">
                    <h3 class="text-center text-info"><strong>Edit Product</strong></h3>
                </div>
                <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
                    <div class="login-form">
                        <label for="" class="form-control-label">Name</label>
                        <input type="text" name="Name" class="form-control" value="{{product.Name}}">

                        <label for="" class="form-control-label">Category</label>
                        <input type="text" name="Category" class="form-control" value="{{product.Category}}">

                        <label for="" class="form-control-label">Description</label>
                        <input type="text" name="Description" class="form-control" value="{{product.Description}}">

                        <label for="" class="form-control-label">Price</label>
                        <input type="text" name="Price" class="form-control" value="{{product.Price}}">

                        <label for="" class="form-control-label">Image</label>
                        
                        <div class="text-end">
                        <img src="/product-images/{{product._id}}.jpg" alt="" style="width: 5rem; height: 5rem; align-items: right;" id="imgView">
                        </div>
                        
                        <input type="file" name="Image" class="form-control" onchange="viewImage(event)">
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-success mt-3">Update</button>
                    </div>
                </form>
            </div>
        </div>
        </div>
    </dvi>
</section>

<script>
    function viewImage(event){
        document.getElementById('imgView').src=URL.createObjectURL(event.target.files[0])
    }
</script>