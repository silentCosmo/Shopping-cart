<section id="undernav">
  <div class="container">
    <div class="row">
      <div class="text-end">
        <a href="/admin/add-product" class="btn btn-success mt-3 ">Add Product</a>
      </div>
    </div>
    <table class="table table-dark table-striped mt-3">
      <thead>
        <tr>
          <th scope="col">No:</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <td scope="row"> {{@index}}</td>
          <td>{{this.Name}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Description}}</td>
          <td><img src="/product-images/{{this._id}}.jpg" style="width: 50px; height: 50px;" alt="No internet"></td>
          <td>
            <a href="/admin/edit-product/{{this._id}}" class="btn btn-success">Edit</a>
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.Name}}?')">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
